<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile"
    android:padding="16dp">

    <!-- Твой кастомный header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Menu Icon -->
        <LinearLayout
            android:id="@+id/menuIcon"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:background="#FFFFFF" />

            <View
                android:layout_width="11dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="start"
                android:background="#FFFFFF" />

            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginTop="3dp"
                android:background="#FFFFFF" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Заголовок (будет меняться) -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track Run"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <!-- Иконка истории (справа) -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cancel"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/done_all"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <!-- Profile Card -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2000dp"
        android:layout_marginTop="100dp"
        android:background="#251B24"
        android:alpha="0.8"
        android:padding="16dp">

        <!-- Profile Image -->
        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true">

            <!-- Profile Image Background -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_gradient"
                android:contentDescription="Profile picture"
                android:scaleType="centerCrop"
                android:src="@drawable/base_profile_img" />

            <!-- Кнопка камеры тоже круглая -->
            <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/camera_button_background"
                android:src="@drawable/camera_alt"
                android:scaleType="centerInside"
                android:padding="4dp"
                android:clickable="true"
                android:focusable="true"/>

        </RelativeLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_toStartOf="@+id/btnEdit"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <!-- Name -->
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/profile_img"
            app:srcCompat="@drawable/edit"
            android:background="@android:color/transparent"/>

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="105dp"
            android:layout_marginBottom="430dp"
            android:orientation="horizontal">

            <!-- Distance -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_distance"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/location_on" />

                <TextView
                    android:id="@+id/tvDistanceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_below="@id/icon_distance"
                    android:layout_centerHorizontal="true"
                    android:text="15 km"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>

            <!-- Duration -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_duration"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/alarm" />

                <TextView
                    android:id="@+id/tvDurationValue"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_below="@id/icon_duration"
                    android:layout_centerHorizontal="true"
                    android:text="02:50:51"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>

            <!-- Calories -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/icon_calories"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:src="@drawable/flash_on" />

                <TextView
                    android:id="@+id/tvCaloriesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_below="@id/icon_calories"
                    android:layout_centerHorizontal="true"
                    android:text="1540 kCal"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />

            </RelativeLayout>

        </LinearLayout>

        <!-- ScrollView -->
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Username -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUserName"
                    style="@style/OutlinedTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:startIconDrawable="@drawable/person_sign_up">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Username"
                        android:text="Bobby A. Munson"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/OutlinedTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:startIconDrawable="@drawable/email_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:text="munson1450@gmail.com"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Address -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilAddress"
                    style="@style/OutlinedTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:startIconDrawable="@drawable/location_on">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:text=""
                        android:maxLines="3"
                        android:inputType="textMultiLine|textPostalAddress"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Height and Weight Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Height -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilHeight"
                        style="@style/OutlinedTextField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/height_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Height (cm)"
                            android:inputType="number"
                            android:text="180"
                            android:textColor="#FFFFFF" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Weight -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilWeight"
                        style="@style/OutlinedTextField"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        app:startIconDrawable="@drawable/weight_icon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Weight (kg)"
                            android:inputType="number"
                            android:text="75"
                            android:textColor="#FFFFFF" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Running Reason -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRunningReason"
                    style="@style/OutlinedTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:startIconDrawable="@drawable/goal_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRunningReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reason for running"
                        android:text="Fitness and health"
                        android:textColor="#FFFFFF" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</RelativeLayout>