<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="#251B24"
    android:alpha="0.8"
    android:layout_margin="8dp"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Avatar Placeholder -->
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_marginEnd="16dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/ivRunnerAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/base_profile_img" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRunnerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Runner Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRunnerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="#CCFFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvRunnerStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stats: 0km, 0:00"
            android:textColor="#CCFFFFFF"
            android:textSize="11sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</LinearLayout>